<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hoadonnguoiban.hoadonnguoiban">
    <RelativeLayout android:id="@+id/yeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RelativeLayout android:id="@+id/page_giohang_ek1"
            android:layout_marginTop="50dp"
            android:layout_width="450dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:text="Hóa đơn của shop"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginTop="2dp"
                android:textColor="#FF9431"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="320dp"
                android:background="@drawable/close"
                android:id="@+id/closeordershopne"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="20dp"
            android:text="Danh sách đơn hàng"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="22sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="20dp"
            android:text="Tổng tiền:"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tongtienhoadon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="100dp"
            android:text="10000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOrdershop"
            android:layout_width="450dp"
            android:layout_height="550dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="0dp"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>