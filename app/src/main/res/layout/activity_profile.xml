<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp">>

            <ImageView
                android:id="@+id/backProfile"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:contentDescription="back"
                android:focusable="true"
                android:src="@drawable/back"

                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="112dp"
                android:text="Tài khoản"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="160dp"
            android:layout_height="132dp"
            android:clickable="true"
            android:contentDescription="back"
            android:focusable="true"
            android:src="@drawable/edit_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Họ tên"
            app:layout_constraintBottom_toTopOf="@+id/edtTen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/Hoten"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_28_shape"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="264dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Địa chỉ email"
            app:layout_constraintBottom_toTopOf="@+id/edtEmail"
            app:layout_constraintTop_toBottomOf="@+id/edtTen" />

        <TextView
            android:id="@+id/gmail"
            android:layout_width="368dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle_28_shape"
            android:ems="10"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            tools:layout_editor_absoluteX="-1dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Mật khẩu"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="368dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:background="@drawable/rectangle_28_shape"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Số điện thoại"
            app:layout_constraintBottom_toTopOf="@+id/edtphone"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/Phonenum"
            android:layout_width="368dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle_28_shape"
            android:ems="10"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/btnChangeProfile"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/Suathongtin"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF5C00"
            android:text="Sửa thông tin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</LinearLayout>
